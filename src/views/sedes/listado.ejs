<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>#</td>
            <td>Nombre</td>
            <td>Alumnos</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        <% if (data) { %>
            <% for (var i = 0; i < data.length; i++) { %>
                <tr>
                    <td><%= data[i].id %></td>
                    <td><%= data[i].nombre %></td>
                    <td><%= data[i].alumnos %></td>
                    <td>
                        <a href="/sedes/actualizar/<%= data[i].id %>" class="btn btn-info"><i class="far fa-edit"></i></a>
                        <% if( !data[i].alumnos > 0 ) { %>
                            <a href="/sedes/eliminar/<%= data[i].id %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                        <% } else { %>
                            <a href="/alumnos/export?sede_id=<%= data[i].id %>" class="btn btn-dark"><i class="fas fa-download"></i></a>
                        <% } %>
                    </td>
                </tr>
            <% } %>
        <% } %>
    </tbody>
</table>
